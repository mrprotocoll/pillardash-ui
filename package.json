{
  "name": "pillardash-ui",
  "version": "0.1.1",
  "description": "PillarDash Reusable UI components",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist",
    "build": "npm run clean && tsup src/index.ts --format cjs,esm --dts --external react,react-dom,next,tailwindcss",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react,react-dom,next,tailwindcss --watch",
    "lint": "tsc",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "nextjs",
    "ui",
    "components",
    "tailwindcss",
    "typescript",
    "pillardash"
  ],
  "author": "mrprotocoll",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrprotocoll/pillardash-ui.git"
  },
  "homepage": "https://github.com/mrprotocoll/pillardash-ui#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.5",
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "next": "^15.3.2",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.7",
    "ts-jest": "^29.3.0",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "classnames": "^2.5.1"
  },
  "peerDependencies": {
    "next": "^15.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.7"
  }
}
